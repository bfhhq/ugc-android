<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ugcdemoandroid.MainActivity" >

    <Button
        android:id="@+id/captureBtn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Capture" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/videoListView"
                android:layout_alignTop="@+id/captureBtn"
                android:layout_toRightOf="@+id/captureBtn"
                android:padding="5dp" />
    
    <Button
        android:id="@+id/refreshBtn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/captureBtn"
        android:layout_below="@+id/captureBtn"
        android:text="Refresh" />

        <ListView
        android:id="@+id/videoListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/refreshBtn"
        android:layout_below="@+id/refreshBtn"
        android:layout_marginTop="5dp" />

    
</RelativeLayout>
